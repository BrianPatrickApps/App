<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.patrickc.navibar.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/relLay"
    android:background="@drawable/background3_clouded"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/room_background">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="375dp"
            android:layout_height="75dp"
            android:layout_above="@+id/submit"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="34dp"
            android:orientation="horizontal"

            >
            <Button
                android:id="@+id/Stormy"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Storm" />


            <Button
                android:id="@+id/Rain"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Rain" />

            <Button
                android:id="@+id/Overcast"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Cast" />

            <Button
                android:id="@+id/Cloudy"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="Cloud" />

            <Button
                android:id="@+id/Sunny"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_toEndOf="@+id/submit"
                android:text="Sun" />

        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:text="Submit" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:text="Button"
                tools:layout_editor_absoluteY="346dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@raw/left_arrow" />

</RelativeLayout>
