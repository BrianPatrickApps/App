<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.patrickc.navibar.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/relLay"
    android:background="@drawable/background3_clouded"
    >

    <RelativeLayout
        android:id="@+id/inputScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/room_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="500dp"
            android:layout_height="100dp"

            android:layout_marginTop="150dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/Stormy"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Storm" />


            <Button
                android:id="@+id/Rain"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/Stormy"
                android:text="Rain" />

            <Button
                android:id="@+id/Overcast"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/Cloudy"
                android:text="Cast" />

            <Button
                android:id="@+id/Cloudy"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/Sunny"
                android:text="Cloud" />

            <Button
                android:id="@+id/Sunny"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="Sun" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/inputWeather"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_alignTop="@+id/linearLayout"
            app:srcCompat="@drawable/input_1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Nurse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@drawable/room_background_2"
        android:visibility="gone">

        <ImageView
            android:id="@+id/nurse6"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignTop="@+id/nurse4"
            android:layout_marginEnd="58dp"
            android:layout_marginTop="11dp"
            android:layout_toStartOf="@+id/nurse4"
            android:visibility="gone"
            app:srcCompat="@raw/nurse5"

            />

        <ImageView
            android:id="@+id/nurse4"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignTop="@+id/nurse2"
            android:layout_marginEnd="26dp"
            android:layout_toStartOf="@+id/nurse2"
            android:visibility="gone"
            app:srcCompat="@raw/nurse5" />

        <ImageView
            android:id="@+id/nurse5"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="32dp"
            android:layout_toStartOf="@+id/nurse3"
            android:visibility="gone"
            app:srcCompat="@raw/nurse5" />

        <ImageView
            android:id="@+id/nurse2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/nurse8"
            android:layout_marginEnd="93dp"
            android:visibility="gone"
            app:srcCompat="@raw/nurse5" />

        <ImageView
            android:id="@+id/nurse1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            app:srcCompat="@raw/nurse5" />

        <ImageView
            android:id="@+id/nurse3"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="36dp"
            android:layout_toStartOf="@+id/nurse1"
            android:visibility="gone"
            app:srcCompat="@raw/nurse5" />

        <ImageView
            android:id="@+id/nurse8"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="43dp"
            android:layout_marginStart="11dp"
            android:visibility="gone"
            app:srcCompat="@raw/nurse5" />

        <ImageView
            android:id="@+id/nurse7"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/nurse6"
            android:visibility="gone"
            app:srcCompat="@raw/nurse5" />

        <ImageView
            android:id="@+id/rainOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:srcCompat="@drawable/rain_drops" />

        <ImageView
            android:id="@+id/moodOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>
